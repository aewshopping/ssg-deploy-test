---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for the Posts page–it lists the posts in the collection #}

  <div class="heading_section">
    <div class="container">
    {{ content | safe }}
    <ul class="nobullet">
      {%- for post in collections.posts -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}>{{ post.data.page.date | htmlDateString }} — <a href='{{ post.url }}'>{{ post.data.title }}</a>
        <p>{{ post.templateContent | excerpt }}</p>
        </li>
      {%- endfor -%}
    </ul>
    </div>
  </div>
