{% macro book_covers(input) %}

<div class="grid_book_small">

{% for item in input.books %}

<div class="fix-children">
  <div class="image_cover_container">
  <img loading='lazy' class='image_book_cover' src="https://res.cloudinary.com/ds2o5ecdw/image/upload/acovers/{{ item[0] }}.02._SCM_.jpg" alt="{{ item[1] }}" title="{{ item[1] }}">

  <div tabindex="0" id="cover{{ loop.index }}" class='image_book_overlay open-modal'
      data-title="{{ item[1] }}" 
      data-cover_large="https://res.cloudinary.com/ds2o5ecdw/image/upload/acovers/{{ item[0] }}.02._SCL_.jpg" 
      data-amazon_uk_link="https://amazon.co.uk/dp/{{ item[0]}}" 
      data-amazon_us_link="https://amazon.com/dp/{{ item[0]}}">
    <div class="center_item">
    <svg class="svg-icon-zoom" height="30px" width="30px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">{% include "sections/svg/icon_zoom.html" %}</svg>
    </div>
  </div>    
    
  </div>
    
</div>

{% endfor %}
  
</div>

<dialog class="modal_bookzoom">

  <button class="modal_close">&#10005;</button>
  <div class="grid-2column">
    <div>
      <img class = "myModalImage" src="#" alt="cover image">
    </div>
    <div class="flex-column">
      <p class="myModalTitle pad-top-10 margin-top-10">[title]</p>
      <div class="flex1">        
      </div>
      <div class="link-btn-bg">
        <a href="#"  target="_blank" class="myModalLink_AmazonUK link-btn displayblock flex0"><svg class="svg-icon-btn" xmlns="http://www.w3.org/2000/svg" height="25px" width="25px" viewBox="0 0 24 24"  fill="#000000">{% include "sections/svg/icon_shoppingcart.html" %}</svg>Amazon UK</a></div>
      <div class="link-btn-bg">
        <a href="#" target="_blank" class="myModalLink_AmazonUS link-btn displayblock flex0"><svg class="svg-icon-btn" xmlns="http://www.w3.org/2000/svg" height="25px" width="25px" viewBox="0 0 24 24"  fill="#000000">{% include "sections/svg/icon_shoppingcart.html" %}</svg>Amazon US</a></div>
    </div>
  </div>

</dialog>
{% endmacro %}


{% macro post_icon(input) %}

{# associate icons with post tag types - may need to look at padding #}

{% if input.type=="review" %}
<img loading="lazy" class="grid_post_icon" src="{{staticdata.images.review_icon}}" alt="little review icon">{% endif %}
{% if input.type=="history books" %}
<img loading="lazy" class="grid_post_icon" src="{{staticdata.images.books_icon}}" alt="little books icon">{% endif %}
                           
{% endmacro %}